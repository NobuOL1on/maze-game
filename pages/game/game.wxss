.game-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-canvas {
  width: 100%;
  height: 70vh;
  background: #f0f0f0;
  margin: 20rpx 0;
}

.controls {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

button {
  width: 200rpx;
  font-size: 28rpx;
}
